{
	"name": "digitalzenworks/consumer-provider",
	"description": "A package providing an interface to allow a provider object to feed a consumer object.",
	"homepage": "https://github.com/jamesjohnmcguire/consumer-provider/",
	"keywords": [ "consumer", "provider", "pattern" ],
	"license": "MIT",
	"minimum-stability": "dev",
	"prefer-stable": true,
	"type": "library",
	"authors":
	[
		{
			"name": "James John McGuire",
			"email": "jamesjohnmcguire@gmail.com"
		}
	],
	"funding":
	[
		{
			"type": "github",
			"url": "https://github.com/sponsors/jamesjohnmcguire"
		}
	],
	"support":
	{
		"issues": "https://github.com/jamesjohnmcguire/consumer-provider/issues"
	},
	"autoload":
	{
		"classmap":
		[
			"SourceCode/"
		],
		"psr-4":
		{
			"digitalzenworks\\ConsumerProvider\\": "SourceCode/"
		}
	},
	"bin":
	[
		"dzwcp-process"
	],
	"config":
	{
		"allow-plugins":
		{
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"phpstan/extension-installer": true
		},
		"optimize-autoloader": true,
		"process-timeout": 0,
		"sort-packages": true
	},
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/jamesjohnmcguire/consumer-provider"
		}
	],
	"require":
	{
		"php": "^7.4 || ^8.0"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "*",
		"php-parallel-lint/php-console-highlighter": "^1.0",
		"php-parallel-lint/php-parallel-lint": "^1.2.0",
		"phpcompatibility/php-compatibility": "*",
		"phpcsstandards/phpcsdevtools": "^1.0",
		"phpcsstandards/phpcsextra": "^1.2.0",
		"phpmd/phpmd": "^2.15",
		"phpstan/extension-installer": "^1.4",
		"phpstan/phpstan": "^2.1",
		"phpstan/phpstan-deprecation-rules": "^2.0",
		"phpunit/phpunit": "^11.0 || ^12.0",
		"roave/security-advisories": "dev-master",
		"squizlabs/php_codesniffer": "*"
	},
	"scripts": {
		"test": "vendor/bin/phpunit --configuration Tests/phpunit.xml"
	}
}
